<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" minHeight="400.0" minWidth="300.0" spacing="20.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.todolist.ToDoListController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <AnchorPane prefHeight="354.0" prefWidth="260.0">
            <children>
                <Label alignment="CENTER" layoutX="18.0" layoutY="14.0" minWidth="200.0" text="To Do List">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
                <TextField fx:id="input" layoutX="45.0" layoutY="45.0" />
                <Button fx:id="buttomAdd" layoutX="156.0" layoutY="70.0" mnemonicParsing="false" onAction="#onButtonAddClick" text="Add" />
                <ListView fx:id="itemsList" layoutX="30.0" layoutY="126.0" prefHeight="200.0" prefWidth="200.0" />
            </children>
        </AnchorPane>
    </children>
</VBox>
